.wx-toast-box {
  display: flex;
  width: 100%;
  justify-content: center;
  position: fixed;
  z-index: 999;
  bottom: 80rpx;
  opacity: 0;
}

.wx-toast-content {
  max-width: 80%;
  border-radius: 50in;
  padding: 10px;
  background: rgba(0, 0, 0, 0.75);
}

.wx-toast-toast {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}