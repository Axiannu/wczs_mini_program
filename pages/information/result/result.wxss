.vertical-view {
  height: 120px;
  display: flex;
  flex-flow: column;
  padding-left: 22rpx;
  padding-right: 22rpx;
  position: relative;
}

swiper-item {
  display: flex;
  flex-flow: column;
}

.item-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row;
}

.item-view image {
  height: 80px;
  width: 250px;
  margin: 12px 0;
}

.item-view .item-subview {
  width: auto;
  height: 100%;
  display: flex;
  flex-flow: column;
}

.item-view .item-subview .item-subview-bottom {
  width: 100%;
  display: flex;
  flex-flow: row;
  position: absolute;
  bottom: 8px;
}

.item-view .item-subview .item-subview-bottom image {
  width: 20px;
  height: 20px;
  margin: auto 0;
}

.line {
  height: 1px;
  width: 100%;
  margin: 0 auto;
  background-color: #EAEAEA;
}

.empty-view {
  width: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
}

.empty-view image {
  width: 120px;
  height: 100px;
  margin: 0 auto;
}

.empty-view .empty-text {
  text-align: center;
  margin-top: 8px;
  font-size: 24rpx;
  color: #707070;
}