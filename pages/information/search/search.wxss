page {
  background-color: rgba(242, 242, 242, 0.5);
}

.top-line {
  display: flex;
  flex-flow: row;
  height: auto;
  padding-left: 12px;
  padding-right: 12px;
  padding-bottom: 12px;
  background-color: white;
}

.top-line .search-button {
  background-color: #1796e6;
  color: white;
  height: 40px;
  line-height: 40px;
  border-radius: 50in;
  width: 50px;
  display: flex;
  justify-content: center;
  font-size: 12px;
  padding-left: 8px;
  padding-right: 8px;
}

.search-line {
  height: 40px;
  width: 100%;
  border-radius: 50in;
  background-color: #ECECEC;
  margin-right: 8px;
  display: flex;
  flex-flow: row;
}

.search-line image {
  width: 30px;
  height: 30px;
  margin: 5px 0;
  margin-left: 10px;
}

.search-line view {
  line-height: 40px;
  color: #888888;
}

.search-line input {
  width: 100%;
  height: 40px;
}

.search-placeholder {
  font-size: 12px;
  color: #A7A5A3;
}

.histroy {
  display: flex;
  flex-flow: row;
  margin-top: 12px;
  margin-bottom: 12px;
  padding-left: 24px;
  padding-right: 24px;
}

.histroy .histroy-view {
  font-size: 26rpx;
  font-weight: bold;
}

.histroy .clear {
  font-size: 26rpx;
  color: rgba(23, 150, 230, 1);
  position: fixed;
  right: 24px;
  font-weight: bold;
}

.histroy-item {
  height: 30px;
  display: flex;
  flex-flow: row;
  padding-right: 24px;
  padding-left: 10px;
  margin-top: 8px;
  margin-bottom: 8px;
}

.histroy-item view {
  line-height: 30px;
  font-size: 26rpx;
  margin-left: 8px;
  color: #707070;
}

.histroy-item image {
  width: 48rpx;
  height: 48rpx;
  margin: auto 0;
  margin-left: 10px;
}

.empty-view {
  width: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
}

.empty-view image {
  width: 120px;
  height: 100px;
  margin: 0 auto;
}

.empty-view .empty-text {
  text-align: center;
  margin-top: 8px;
  font-size: 24rpx;
  color: #707070;
}