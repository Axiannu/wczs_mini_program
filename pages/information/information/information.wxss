.search-line {
  height: 40px;
  border-radius: 50in;
  background-color: rgba(178, 178, 178, 0.25);
  display: flex;
  flex-flow: row;
  margin-left: 22rpx;
  margin-right: 22rpx;
  box-sizing: border-box;
}

.search-line image {
  width: 30px;
  height: 30px;
  margin: 5px 0;
  margin-left: 10px;
}

.search-line view {
  line-height: 40px;
  font-size: 24rpx;
  color: #888888;
}

.swiper-tab {
  border-bottom: 2rpx solid gainsboro;
  text-align: left;
  line-height: 80rpx;
  padding-left: 22rpx;
  padding-right: 22rpx;
  box-sizing: border-box;
}

.swiper-tab-list {
  font-size: 28rpx;
  font-weight: bold;
  display: inline-block;
  width: auto;
  color: #1796e6;
  text-align: center;
  margin-right: 12px;
}

.on {
  color: #1796e6;
  border-bottom: 5rpx solid #1796e6;
}

swiper {
  width: 100%;
  height: 100%;
}

.vertical-view {
  height: 120px;
  display: flex;
  flex-flow: column;
  padding-left: 22rpx;
  padding-right: 22rpx;
  position: relative;
}

swiper-item {
  display: flex;
  flex-flow: column;
}

.item-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row;
}

.item-view image {
  height: auto;
  width: 250px;
  margin: 12px 0;
}

.item-view .item-subview {
  width: auto;
  height: 100%;
  display: flex;
  flex-flow: column;
}

.item-view .item-subview .item-subview-bottom {
  width: 100%;
  display: flex;
  flex-flow: row;
  position: absolute;
  bottom: 8px;
}

.item-view .item-subview .item-subview-bottom image {
  width: 20px;
  height: 20px;
  margin: auto 0;
}

.line {
  height: 1px;
  width: 100%;
  margin: 0 auto;
  background-color: #EAEAEA;
}