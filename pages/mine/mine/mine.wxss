.all-view {
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 12px;
  padding-bottom: 8PX;
  background-color: white;
}

.userinfo-avatar {
  width: 115rpx;
  height: 115rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.line {
  width: 90%;
  height: 1px;
  margin: 0 auto;
  background-color: #eaeaea;
}

.fill-line {
  width: 100%;
  height: 1px;
  background-color: #eaeaea;
}

.function-item {
  height: 50px;
  display: flex;
  padding-left: 12px;
  flex-flow: row;
  position: relative;
  background-color: white;
}

.function-item .icon {
  width: 44rpx;
  height: 44rpx;
  margin: auto 16px auto 8px;
}

.function-item view {
  margin: auto 0;
  font-size: 26rpx;
  color: #333333;
}

.function-item .goright {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 30%;
  right: 0;
  margin-right: 44rpx;
}